{
  "compilerOptions": {
    "target": "ES2020",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "module": "commonjs",
    "lib": ["ES2020"],
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "files": true
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
